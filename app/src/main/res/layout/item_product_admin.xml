<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:layout_margin="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/img_photo_product_admin"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:src="@drawable/iphone12xanhla"></ImageView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_photo_product_admin">

            <TextView
                android:id="@+id/tv_product_name_admin"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:text="Iphone 12"
                android:textColor="@color/text_color"
                android:textSize="10sp"></TextView>

            <TextView
                android:id="@+id/tv_product_price_admin"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_below="@+id/tv_product_name_admin"
                android:gravity="center"
                android:text="24.990.000"
                android:textColor="@color/red"
                android:textSize="10sp"></TextView>


        </RelativeLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>